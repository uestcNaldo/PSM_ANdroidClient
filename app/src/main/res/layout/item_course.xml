<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/course_item_margin_LR"
    android:layout_marginRight="@dimen/course_item_margin_LR"
    android:layout_marginTop="@dimen/course_item_margin_Top"
    app:cardCornerRadius="@dimen/cardview_corner_radius"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/course_item_paddingTop"
        android:paddingLeft="@dimen/course_item_paddingLR"
        android:paddingRight="@dimen/course_item_paddingLR">
        <TextView
            android:id="@+id/item_course_name"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:text="@string/course_item_name_lable"
            android:textSize="@dimen/course_item_name_size"
            android:gravity="left|center"
            android:textColor="@color/colorCourseName" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="left|center_horizontal|bottom"
                    android:text="@string/course_item_duration_lable"
                    android:textSize="@dimen/course_item_other_size"/>
                <TextView
                    android:id="@+id/item_course_duration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical|left|bottom"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/course_item_other_size"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>