<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uestc.naldo.psm.activity.DetailActivity.SchoolDetailActivity"
    tools:showIn="@layout/activity_school_detail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="200dp"
                android:layout_marginTop="10dp"
                android:text="@string/school_detail_subtitle_1"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/item_school_content_marginTop"
            android:layout_marginLeft="@dimen/notifi_item_margin_LR"
            android:layout_marginRight="@dimen/notifi_item_margin_LR"
            android:elevation="@dimen/cardview_item_elevation"
            app:cardCornerRadius="@dimen/cardview_corner_radius">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/text_margin"
                android:textSize="@dimen/text_school_content_size"
                android:text="@string/text_school_content" />
        </android.support.v7.widget.CardView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="200dp"
                android:layout_marginTop="10dp"
                android:text="@string/school_detail_subtitle_2"/>
        </LinearLayout>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/item_school_content_marginTop"
            android:layout_marginLeft="@dimen/notifi_item_margin_LR"
            android:layout_marginRight="@dimen/notifi_item_margin_LR"
            android:layout_marginBottom="@dimen/notifi_item_margin_Top"
            android:elevation="@dimen/cardview_item_elevation"
            app:cardCornerRadius="@dimen/cardview_corner_radius">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:showDividers="middle"
                android:divider="@drawable/dividerline"
                android:dividerPadding="@dimen/divider_detail_content_item_padding">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/divider_detail_content_item_padding"
                    android:background="@color/colorWhite">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:textSize="@dimen/pet_detail_lable_size"
                        android:textColor="@color/colorText"
                        android:text="@string/lable_school_contact"/>
                    <TextView
                        android:id="@+id/text_course_inst"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center|right"
                        android:textSize="@dimen/pet_detail_value_size"
                        android:text="@string/value_school_contact"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/divider_detail_content_item_padding"
                    android:background="@color/colorWhite">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:textSize="@dimen/pet_detail_lable_size"
                        android:textColor="@color/colorText"
                        android:text="@string/lable_school_phone"/>
                    <TextView
                        android:id="@+id/text_course_condition"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center|right"
                        android:textSize="@dimen/pet_detail_value_size"
                        android:text="@string/value_school_phone"/>
                </LinearLayout>
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/divider_detail_content_item_padding"
                    android:background="@color/colorWhite">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:gravity="center|left"
                        android:textSize="@dimen/pet_detail_lable_size"
                        android:textColor="@color/colorText"
                        android:text="@string/lable_school_address"/>
                    <TextView
                        android:id="@+id/text_course_duration"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="7"
                        android:gravity="center|right"
                        android:textSize="@dimen/pet_detail_value_size"
                        android:text="@string/value_school_address"/>
                </LinearLayout>
            </LinearLayout>

        </android.support.v7.widget.CardView>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
