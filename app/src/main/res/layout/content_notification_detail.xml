<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.uestc.naldo.psm.activity.DetailActivity.NotificationDetailActivity"
    tools:showIn="@layout/activity_notification_detail">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/item_detail_content_marginTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="@string/notifi_item_lable_date"
                    android:textSize="@dimen/notifi_item_other_size"/>
                <TextView
                    android:id="@+id/item_notification_detail_date"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="2017-04-12"
                    android:gravity="center_vertical|left|bottom"
                    android:textColor="@color/colorBlack"
                    android:textSize="@dimen/notifi_item_other_size"/>
            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_horizontal|bottom"
                    android:text="@string/notifi_item_lable_admin"
                    android:textSize="@dimen/notifi_item_other_size"/>
                <TextView
                    android:id="@+id/item_notification_detail_author"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Amdin1"
                    android:gravity="center_vertical|left|bottom"
                    android:textColor="@color/colorBlack"

                    android:textSize="@dimen/notifi_item_other_size"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/notifi_detail_content_padding">
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/cardview_corner_radius">
                <TextView
                    android:id="@+id/text_notifi_detail_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/notifi_detail_content_margin"
                    android:text="@string/large_text"
                    android:textSize="@dimen/notifi_detail_content_text_size"
                    android:textColor="@color/colorBlack"/>
            </android.support.v7.widget.CardView>

        </LinearLayout>
    </LinearLayout>


</android.support.v4.widget.NestedScrollView>
